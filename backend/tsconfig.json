{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // This is where compiled files will go
    "rootDir": "./", // Set to root of the backend folder
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["**/*.ts", "data/examData.js"], // Include all TypeScript files in the backend folder
  "exclude": ["node_modules", "dist"]
}
